@model eUseControl.Web.Models.UserRegister
@{
    ViewBag.Title = "Index";

    Layout = "~/Views/Shared/_LayoutSingin.cshtml";

}
<section class="home" id="home">
    <div class="col-md-6 d-flex align-items-center register-login-div">
        <div class="p-5 wow fadeInUp" data-wow-delay="0.2s">
            <h1 class="text-white mb-4">SING IN</h1>
            @Html.ValidationSummary(true)
            @Html.ValidationMessageFor(m => m.Username)
            @Html.ValidationMessageFor(m => m.Email)
            @Html.ValidationMessageFor(m => m.Password)
            @using (Html.BeginForm("Index", "Register", FormMethod.Post, new
            {
                @id = "RegisterForm"
            }))
            {
                <form>
                    <div class="row g-3">




                        @Html.LabelFor(m => m.Username, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Username, new
                        {
                       placeholder = "Name",
                       title = "Please enter your username",
                       name = "username",
                       value = "",
                       id = "username",
                       @class = "form-control"
                        })


                        @Html.Label("Your email address")
                        @Html.TextBoxFor(m => m.Email, new
                        {
                       placeholder = "something@email.com",
                       title = "Please enter your Email",
                       name = "email",
                       value = "",
                       id = "email",
                       @class = "form-control"
                        })

                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Password, new
                         {
                       placeholder = "*********",
                       type = "password",
                       title = "Please enter your password",
                       value = "",
                       name = "password",
                       id = "password",
                       @class = "form-control"
                        })


                        <div class="form-group mt-4 mb-0">
                            <input class="btn btn-primary btn-block" type="submit" value="Create account">
                        </div>

                    </div>
                </form>
            }
        </div>
    </div>
</section>